{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id", "_doc"] }],
    "import/extensions": ["error", "ignorePackages"],
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "no-param-reassign": ["error", { "props": false }],
    "import/prefer-default-export": "off"
  }
}
